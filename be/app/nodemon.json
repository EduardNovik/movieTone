{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "delay": 500,
  "verbose": false,
  "exec": "node --experimental-specifier-resolution=node --loader ts-node/esm",
  "events": {
    "restart": "echo 'App restarted due to:\n'$FILENAME'\"'"
  },
  "signal": "SIGKILL",
  "watch": ["./**/*.ts"]
}
