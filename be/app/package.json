{
  "name": "@movieTone/app",
  "version": "0.0.1",
  "private": true,
  "imports": {
    "#*": "./src/*"
  },
  "type": "module",
  "scripts": {
    "start": "run-s doc-up db-migration dev",
    "dev": "run-s doc-up nodemon",
    "nodemon": "nodemon ./src/index.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "doc-up": "docker-compose up -d",
    "doc-down": "docker-compose down -v",
    "db-migration": "node --loader @swc-node/register/esm ./scripts/migrate.ts",
    "db-migration2": "nodemon ./scripts/migrate.ts"
  },
  "dependencies": {
    "@movieTone/database-schema": "workspace:*",
    "@movieTone/eslint-config": "workspace:*",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.10",
    "cors": "^2.8.5",
    "drizzle-orm": "~0.28.6",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.0.0",
    "nodemon": "^3.0.1",
    "postgres": "~3.4.2",
    "supertokens-node": "^16.4.0",
    "zod": "~3.22.4"
  },
  "devDependencies": {
    "@swc-node/core": "^1.10.6",
    "@swc-node/register": "^1.6.8",
    "@swc/core": "^1.3.95",
    "dotenv": "~16.3.1",
    "drizzle-kit": "~0.19.13",
    "eslint": "~8.52.0",
    "npm-run-all": "~4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
